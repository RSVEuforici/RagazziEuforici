<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="it.unica.euforici.ragazzieuforici.FinePrenotazioneData">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:backgroundTint="#fff">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        app:title="Data Modificata "
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/help2"
                        android:id="@+id/imageView23"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:onClick="help"
                        android:layout_marginRight="10dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/stepfinishb"
                    android:id="@+id/imageView12"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:elevation="14dp" />

            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.04"
                android:elevation="5dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9CCB3D"
                        android:theme="?attr/actionBarTheme"
                        android:minHeight="?attr/actionBarSize"
                        android:id="@+id/toolbar4"
                        app:title="Complimenti" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="88dp">

                        <ImageView
                            android:layout_width="62dp"
                            android:layout_height="57dp"
                            app:srcCompat="@drawable/conferma"
                            android:id="@+id/imageView15"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp" />

                        <TextView
                            android:text="Data Modificata !"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="31dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="#E7E7E7"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:text="Ti è stata inviata una mail con nuova data che hai selezionato. Ti ricordiamo di esporre i rifiuti la notte prima, oppure entro le 6:00 del mattino del giorno della prenotazione in prossimità del tuo numero civico."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="15dp"
                        android:textSize="15sp"
                        android:textColor="#727272" />


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="#E7E7E7"
                        android:layout_marginTop="0dp" />

                    <Button
                        android:text="Torna alla HOME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button6"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:onClick="backToHome" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
