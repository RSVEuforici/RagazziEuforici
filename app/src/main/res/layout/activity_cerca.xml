<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="it.unica.euforici.ragazzieuforici.CercaRifiuti">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_weight="0.00"
            android:backgroundTint="#fff">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorPrimary">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:title="Cerca rifiuto"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/help2"
                    android:id="@+id/imageView17"
                    android:adjustViewBounds="false"
                    android:background="?attr/colorPrimary"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:onClick="help"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/step2b"
                android:id="@+id/imageView6"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:elevation="14dp"
                android:layout_weight="1" />

        </android.support.design.widget.AppBarLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="3dp"
            android:layout_weight="0.02"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9CCB3D">

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:theme="?attr/actionBarTheme"
                        android:minHeight="?attr/actionBarSize"
                        android:id="@+id/toolbar2"
                        android:backgroundTint="#9CCB3D"
                        app:title="Inserisci rifiuto "
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="15dp">


                    <AutoCompleteTextView
                        android:hint="es: Televisore"
                        android:layout_width="match_parent"
                        android:id="@+id/autocomplete"
                        android:layout_margin="0dp"
                        android:layout_weight="3.16"
                        android:layout_height="40dp"
                        android:textColor="#727272" />

                    <Button
                        android:text="Inserisci per il Ritiro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/additem"
                        android:layout_weight="3.16" />

                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"
                    android:background="#E7E7E7"
                    android:layout_marginTop="0dp" />
                <!-- Oggetto 1 -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="21dp">

                    <TextView
                        android:text=""
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtItem"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="50dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1.02"
                        android:paddingLeft="15dp"
                        android:textColor="#727272" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/spinner"
                        android:paddingTop="4dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/delete"
                        android:id="@+id/delImage"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:paddingTop="3dp"
                        android:layout_weight="0.10"
                        android:layout_marginTop="1dp"
                        android:paddingBottom="2dp" />
                </LinearLayout>

                <!-- Oggetto 2 -->


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="21dp">

                    <TextView
                        android:text=""
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtItem1"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="50dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1.02"
                        android:paddingLeft="15dp"
                        android:textColor="#727272" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/spinner"
                        android:paddingTop="4dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/delete"
                        android:id="@+id/delImage1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:paddingTop="3dp"
                        android:layout_weight="0.10"
                        android:layout_marginTop="1dp"
                        android:paddingBottom="2dp" />
                </LinearLayout>

                <!-- Oggetto 3-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="21dp">

                    <TextView
                        android:text=""
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtItem2"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="50dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1.02"
                        android:paddingLeft="15dp"
                        android:textColor="#727272" />


                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/spinner"
                        android:paddingTop="4dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/delete"
                        android:id="@+id/delImage2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:paddingTop="3dp"
                        android:layout_weight="0.10"
                        android:layout_marginTop="1dp"
                        android:paddingBottom="2dp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"
                    android:background="#E7E7E7" />
            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="PROSEGUI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/aggiungirifiuto"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textColorHint="@android:color/holo_orange_dark"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="165dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_alignLeft="@+id/rimuovi"
                        android:textAlignment="textEnd"
                        android:onClick="fineOggetti"
                        android:enabled="true"
                        />
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
